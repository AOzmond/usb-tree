# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 110
trim_trailing_whitespace = true

[*.go]
indent_style = tab
tab_width = 4

[{*.md,*.json,*.js,*.ts,*.html,*.svelte}]
indent_size = 2

[COMMIT_EDITMSG]
max_line_length = 0